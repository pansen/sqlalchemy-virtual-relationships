root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,sh,md}]
charset = utf-8
indent_size = 2
indent_style = space

[*.{js,py,lua}]
charset = utf-8
max_line_length = 105
indent_size = 4
indent_style = space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

